{
  "name": "@dbml/playground",
  "version": "4.0.0",
  "description": "Interactive playground for debugging and visualizing the DBML parser pipeline",
  "author": "Holistics <dev@holistics.io>",
  "license": "Apache-2.0",
  "homepage": "https://dbml.dbdiagram.io/playground",
  "repository": "https://github.com/holistics/dbml/tree/master/dbml-playground",
  "private": true,
  "keywords": [
    "dbml",
    "parser",
    "playground",
    "vue3",
    "debugging"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@dbml/parse": "^4.0.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "monaco-vim": "^0.4.2",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@types/lodash": "^4.14.200",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}

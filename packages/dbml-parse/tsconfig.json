{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./", /* Specify the root folder within your source files. */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "@lexer/*": [
        "src/lib/lexer/*"
      ],
      "@parser/*": [
        "src/lib/parser/*"
      ],
      "@analyzer/*": [
        "src/lib/analyzer/*"
      ],
      "@interpreter/*": [
        "src/lib/interpreter/*"
      ],
      "@serialization/*": [
        "src/lib/serialization/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src",
    "tests"
  ]
}
